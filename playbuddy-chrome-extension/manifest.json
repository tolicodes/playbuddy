{
  "manifest_version": 3,
  "name": "Playbuddy Scraper Extension",
  "version": "1.0",
  "description": "Scrapes event data from FetLife organizer pages.",
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://fetlife.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/libs/moment.js", "src/libs/moment-tz.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
